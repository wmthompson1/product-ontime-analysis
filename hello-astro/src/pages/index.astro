      <button class="button" id="clickMe">Click me!</button>
    </div>

    <script>
      document.getElementById('clickMe').addEventListener('click', () => {
        alert('Hello from Astro! The framework is working perfectly! ðŸŽ‰');
      });
    </script>
  </body>
</html>
