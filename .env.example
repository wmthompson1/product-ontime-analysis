# Manufacturing Analytics - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL Database Connection
# =============================================================================

# Local Development (Homebrew PostgreSQL - no SSL)
# Format: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+psycopg2://your_username@localhost:5432/manufacturing_analytics

# Alternative: Explicit connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=manufacturing_analytics
# DB_USER=your_username
# DB_PASSWORD=
# DB_SSLMODE=disable

# Cloud PostgreSQL Examples (SSL required):
# Neon:     postgresql+psycopg2://user:pass@ep-xxx.neon.tech:5432/dbname?sslmode=require
# Supabase: postgresql+psycopg2://postgres:pass@db.xxx.supabase.co:5432/postgres?sslmode=require

# =============================================================================
# API Keys
# =============================================================================

# OpenAI API Key (for semantic layer, embeddings)
OPENAI_API_KEY=sk-...

# Tavily API Key (for RAG web search)
TAVILY_API_KEY=tvly-...

# Hugging Face Token (for MCP server, model access)
HUGGINGFACE_TOKEN=hf_...

# =============================================================================
# Application Settings
# =============================================================================

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Server ports (default values)
FLASK_PORT=5000
ASTRO_PORT=4321
HF_SPACE_PORT=8000
